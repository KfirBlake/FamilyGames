<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/dialog_custom_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/kids"/>

    <TextView
        android:id="@+id/dialog_custom_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is the message"
        android:textSize="20dp"
        android:layout_toLeftOf="@+id/dialog_custom_image"/>/>

    <Button
        android:id="@+id/dialog_custom_ButtonOK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Ok "
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/dialog_custom_image"
        />
</RelativeLayout>
