<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TotemPolePictureGame">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/totemPoleMainPicute"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/kids"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/totem_subject_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="טורפים ממשפחת החתולים"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/totemPoleMainPicute"
                app:layout_constraintTop_toTopOf="parent" />
            <Button
                android:id="@+id/totemPoleCheckButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="בדיקה"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/totemPoleMainPicute"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/totemPoleHeadViewPager"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/totemPoleMiddleViewPager"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/totemPoleBottomViewPager"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp" />

    </LinearLayout>
</LinearLayout>